---
interface Props { variant?: 'info' | 'success' | 'error' | 'warn'; class?: string }
const { variant = 'info', class: className = '' } = Astro.props as Props;
---

<span class={`inline-message inline-${variant} ${className}`} role="status"><slot /></span>

<style>
.inline-message { display: inline-block; padding: 6px 8px; border-radius: 6px; font-size: 0.95rem; background: var(--color-surface-muted); color: var(--color-text-primary); border: 1px solid var(--color-border-default); }
.inline-info { border-left: 3px solid var(--color-link-primary); padding-left: 10px; }
.inline-success { border-left: 3px solid var(--color-state-success); padding-left: 10px; }
.inline-error { border-left: 3px solid var(--color-state-error); padding-left: 10px; }
.inline-warn { border-left: 3px solid var(--color-state-warning); padding-left: 10px; }
</style>