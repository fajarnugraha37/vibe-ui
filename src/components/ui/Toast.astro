---
interface Props { class?: string }
const { class: className = '' } = Astro.props as Props;
---

<div class={`toast-root ${className}`} aria-live="polite" aria-atomic="true">
  <slot />
</div>

<style>
.toast-root { position: fixed; right: 16px; bottom: 16px; display: flex; flex-direction: column; gap: 8px; z-index: 9999; max-width: 320px; pointer-events: none; }
.toast-root .toast { pointer-events: auto; background: var(--color-surface-default); border: 1px solid var(--color-border-default); padding: 10px 12px; border-radius: 8px; box-shadow: 0 8px 24px rgba(12,20,35,0.06); color: var(--color-text-primary); transform: translateY(6px); opacity: 0; transition: opacity .18s ease, transform .18s ease; }
.toast-root .toast[data-visible="true"] { transform: translateY(0); opacity: 1; }
</style>